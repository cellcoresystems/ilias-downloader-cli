<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import org.controlsfx.control.ToggleSwitch?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="625.0"
            prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <ToolBar fx:id="toolBar">
            <Button fx:id="syncButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    prefWidth="180.0" text="Synchronisieren"/>
            <ToggleSwitch fx:id="downloadToggleSwitch" selected="true" text="Inhalte herunterladen">
                <padding>
                    <Insets top="5.0"/>
                </padding>
            </ToggleSwitch>
            <Pane HBox.hgrow="ALWAYS"/>
            <MenuButton fx:id="settingsMenuButton" maxWidth="-Infinity" mnemonicParsing="false">
                <items>
                    <MenuItem fx:id="connectSettingsItem" mnemonicParsing="false" text="Verbindungseinstellungen"/>
                    <MenuItem fx:id="downloadSettingsItem" mnemonicParsing="false" text="Download-Einstellungen"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem fx:id="aboutAppItem" mnemonicParsing="false" text="Über Ilias Downloader 3"/>
                </items>
            </MenuButton>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="itemTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="itemNameCol" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="850.0"
                             text="Name"/>
                <TableColumn fx:id="itemSizeCol" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                             prefWidth="150.0" text="Größe"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
